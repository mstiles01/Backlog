@model BacklogBeta.Models.ViewModel.MovieListEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
           
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="List.ListId" />
            <div class="form-group">
                <label asp-for="List.Name" class="control-label"></label>
                <input asp-for="List.Name" class="form-control" />
                <span asp-validation-for="List.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="List.Description" class="control-label"></label>
                <input asp-for="List.Description" class="form-control" />
                <span asp-validation-for="List.Description" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="List.ListId" class="control-label"></label>
                    <select multiple asp-for="Movie.MovieId" asp-items="@ViewBag.Movie"></select>
                    <span asp-validation-for="List.ListId" class="text-danger"></span>
                </div>
           
          
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


        

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
